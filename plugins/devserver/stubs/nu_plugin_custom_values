#!/bin/sh
# Get the directory where this script lives
DIR="$(dirname "$(readlink -f "$0")")" 

# Check for Alpine and prefer musl variant if available
if [ -f /etc/alpine-release ] && [ -f "$DIR/($tool_name).musl.toml" ]; then
    exec mise tool-stub "$DIR/nu_plugin_custom_values.musl.toml" "$@"
else
    exec mise tool-stub "$DIR/nu_plugin_custom_values.toml" "$@"
fi
